<div>
    {{>navbarPartial}}
</div>
<div id="home-container">
    <div id="profile-summary-container">
        {{>profileSummaryPartial}}
    </div>
    <div id="post-container">
        <div id="create-post-container">
            <form method="POST" action="/post">
                <h2>What's your question today?</h2>
                <input type="text" id="subject" name="subject" placeholder="Subject">
                <input type="textarea" id="question" name="question" placeholder="Explain in detail ...">
                <select class="topics" name="topic">
                    <option value="php">php</option>
                    <option value="nodejs">nodejs</option>
                    <option value="java">java</option>
                    <option value="sql">sql</option>
                    <option value="zend">zend</option>
                </select>
                <input id="post-to-timeline" type="submit" value="Post to timeline">
            </form>
        </div>
        <div id="search-by-topic-container">
            <form method="GET" action="/posts/searchTopic">
                <label id="search-label" for="topics">Search by topic</label>
                <select class="topics" name="string">
                    <option value="php">php</option>
                    <option value="nodejs">nodejs</option>
                    <option value="java">java</option>
                    <option value="sql">sql</option>
                    <option value="zend">zend</option>
                </select>
                <input type="hidden" name="page" value="0">
                <input id="search-by-topic" type="submit" value="go ->">
            </form>
        </div>
        <div id="user-posts-container">
            {{>postPartial}}
        </div>
    </div>
</div>

