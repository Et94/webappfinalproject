<div>
    {{>navbarPartial}}
</div>
<div id="profile">
	<div id="left">
		<img src={{ user.imageurl }} id="profilePic">
		<p id="u_name"> {{ user.firstname }} {{ user.lastname }} </p>
		<p id="u_about"> {{ user.about }} </p>
		<p id="u_country"> {{ user.country }} </p>
	</div>
	<div id="right">
		{{#if ownProfile}}
		    <input type="submit" id="btnMsg" value="Message" disabled>
		{{else}}
		    <form action="/messages" method="post"><input type="hidden" name="receiverid" id="rid" value={{user.userid}}><input type="submit" id="btnMsg" value="Message"></form>
		{{/if}}
		<form action="/like" method="post"><p id="likes">{{likes}} Likes</p> {{#if likeBtn}} <input type="submit" id="likeBtn" value="+"><input type="hidden" name="p_id" value={{user.userid}}>{{/if}}</form>
		<p id="posts">{{ user.numposts }} Posts</p>
	</div>
</div>
<br>
<div id="postList">
	<h1 id="postTitle">All posts by {{ user.firstname }} </h1>
	<div>
		{{>postPartial}}
	</div>
</div>