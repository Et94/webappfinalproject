<section class="login">
	<section class="login-header">
		<img src="/assets/knowledgeBase.png" class="kb-logo"/>
		<form action="/login" method="POST" align="right" id="login-login-form">
			<input type="text" name="email" placeholder="email" class="login-headerinput" required/>
			<input type="password" name="password" placeholder="password" class="login-headerinput" required/>
			<button type="submit" id="login-login-btn">login</button>
		</form>
	</section>
	{{#if loginError}}
		<p id="login-error">The email or password was incorrect</p>
	{{/if}}
	{{#if userCreated}}
		<p id="user-created">User created! Please log in</p>
	{{/if}}
	<section class="login-body">
		<section id="login-img-section">
			<img src="/assets/books.jpg" id="login-book-img" />
		</section>
		<section id="login-input">
			<section id="login-flavor-text">
				<h2>Join the worlds largest community for knowledge sharing</h2>
			</section>
			<section id="login-form">
				<form action="/signup" method="POST">
					<section>
						<input type="text" name="firstname" placeholder="firstname" class="login-smallinput" required/>
						<input type="text"name="lastname"  placeholder="lastname" class="login-smallinput" required/>
					</section>
					<input type="email" name="email" placeholder="email" class="login-largeinput" required/>
					<input type="password" name="password" placeholder="password" class="login-largeinput" required/>
					<input type="password" name="confirm_password" placeholder="confirm password" class="login-largeinput" required/>
					<button type="submit" id="login-signup-btn">signup</button>
				</form>
				{{#if userExists}}
					<p class="reg-warning">Email already in use. Please use another email.</p>
				{{/if}}
				{{#if matchPass}}
					<p class="reg-warning">Passwords do not match</p>
				{{/if}}
			</section>
		</section>
	</section>

</section>
